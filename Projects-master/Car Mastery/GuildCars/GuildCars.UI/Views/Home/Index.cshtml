@model GuildCars.UI.Models.FeaturedandSpecialsVM
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                <a href="@Url.Action("Specials", "Home")" style="color:#000000; text-decoration: none">
                    <p><strong>Specials!</strong></p>
                    <p>Check out this weeks specials!</p>
                </a>
            </div>
            @foreach (var special in Model.Specials)
            {
                <div class="item">
                    <a href="@Url.Action("Specials", "Home")" style="color: #000000;text-decoration: none">
                        <p><strong>@special.SpecialTitle</strong></p>
                        <p>@special.SpecialDetails</p>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-xs-12">
        <h3>Featured Vehicles</h3>
        @foreach(var listing in Model.FeaturedVehicles)
        {
        <div class="col-xs-12 col-sm-6 col-md-2"  style="border: solid thin;padding:5px;margin:20px;height:150px">
            <p class="featuredListing">
                <a href="@Url.Action("Details", "Inventory", new { id = listing.VehicleListingId })" class="links">
                    <img src="@Url.Content("~/Images/" + listing.ImageFileName)" style="max-width: 100px; height: auto"/>
                </a>
            </p>
            <p class="featuredListing">@listing.Year @listing.VehicleMakeName @listing.VehicleModelName</p>
            <p class="featuredListing">@listing.SalePrice.ToString("c")</p>
        </div>
        }
    </div>
</div>