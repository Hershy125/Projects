@model GuildCars.Models.Queries.ListingDetailItem

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Vehicle Details</h2>
    </div>
</div>
<div class="row" style="border:solid thin; padding:10px">
    <div class="row">
        <div class="col-xs-12">
            <p><strong>@Model.Year @Model.VehicleMakeName  @Model.VehicleModelName</strong></p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-3">
            <img src="@Url.Content("~/Images/" + Model.ImageFileName)" style="max-width:200px"/>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3">
            <table>
                <tbody>
                    <tr>
                        <td><strong>Body Style:</strong></td>
                        <td>@Model.BodyStyleName</td>
                    </tr>
                    <tr>
                        <td><strong>Trans:</strong></td>
                        <td>@Model.TransmissionTypeName</td>
                    </tr>
                    <tr>
                        <td><strong>Color:</strong></td>
                        <td>@Model.ColorName</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3">
            <table>
                <tbody>
                    <tr>
                        <td><strong>Interior:</strong></td>
                        <td>@Model.InteriorColor</td>
                    </tr>
                    <tr>
                        <td><strong>Mileage:</strong></td>
                        <td>
                            @if (Model.Mileage == 0)
                            {
                                <text>New</text>
                            }
                            else
                            {
                                @Model.Mileage.ToString();
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><strong>VIN #:</strong></td>
                        <td>@Model.VIN</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3">
            <table>
                <tbody>
                    <tr>
                        <td><strong>Sale Price:</strong></td>
                        <td>@Model.SalePrice.ToString("c")</td>
                    </tr>
                    <tr>
                        <td><strong>MSRP:</strong></td>
                        <td>@Model.MSRP.ToString("c")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-3 col-xs-9">
            <table>
                <tbody>
                    <tr>
                        <td><strong>Description:</strong></td>
                        <td>@Model.Description</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-9 col-xs-3">
            @if (Model.Sold)
            {
                <p><strong>Unavailable - Sold</strong></p>
            }
            else
            {
                <p>
                    @using (Html.BeginForm("Contact", "Home", new { id = Model.VehicleListingId }, FormMethod.Get))
                    {
                        <button id="btnContact" type="submit">Contact Us</button>
                    }
                </p>
            }
        </div>
    </div>
</div>

