@model GuildCars.UI.Models.InventoryReportVM

@{
    ViewBag.Title = "Inventory";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Inventory Report</h2>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <p><strong>New Vehicles</strong></p>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Year</th>
                    <th scope="col">Make</th>
                    <th scope="col">Model</th>
                    <th scope="col">Count</th>
                    <th scope="col">Stock Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.NewInventoryReport)
                {
                    <tr>
                        <td>@row.Year</td>
                        <td>@row.VehicleMakeName</td>
                        <td>@row.VehicleModelName</td>
                        <td>@row.Count</td>
                        <td>@row.StockValue.ToString("c")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <p><strong>Used Vehicles</strong></p>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Year</th>
                    <th scope="col">Make</th>
                    <th scope="col">Model</th>
                    <th scope="col">Count</th>
                    <th scope="col">Stock Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.UsedInventoryReport)
                {
                    <tr>
                        <td>@row.Year</td>
                        <td>@row.VehicleMakeName</td>
                        <td>@row.VehicleModelName</td>
                        <td>@row.Count</td>
                        <td>@row.StockValue.ToString("c")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
