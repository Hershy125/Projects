@model IEnumerable<GuildCars.Models.Queries.UserModel>
@{
    ViewBag.Title = "Users";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Users</h2>
    </div>
</div>
<div class="row">
    <div class="col-xs-12" style="margin-bottom:10px">
        <a href="@Url.Action("AddUser", "Admin")" class="links">Add a new user</a>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Last Name</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.LastName</td>
                        <td>@user.FirstName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td> <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="links">edit</a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>