@model GuildCars.UI.Models.UpdateUserVM

@{
    ViewBag.Title = "EditUser";
}

<h2>Edit User</h2>

@using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { role = "form", id = "frmEditUser" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.FirstName, "First Name")
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", style = "width:400px" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.LastName, "Last Name")
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", style = "width:400px" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Email, "Email")
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "width:400px" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Role, "Role")
            @Html.DropDownListFor(m => m.Role, new SelectList(Model.Roles, "Role"), new { @class = "form-control", style = "width:100px" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Password, "Password")
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width:400px" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password")
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "width:400px" })
        </div>
    </div>
    <div class="hidden">
        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", style = "width:400px" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('#frmEditUser').validate({
                rules: {
                    'FirstName': {
                        required: true
                    },
                    'LastName': {
                        required: true,
                    },
                    'Email': {
                        required: true,
                        email: true
                    }
                }
            })
        });
    </script>
}

